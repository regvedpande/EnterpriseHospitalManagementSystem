@model cloudscribe.Pagination.Models.PagedResult<Hospital.ViewModels.ApplicationUserViewModel>

@{
    ViewData["Title"] = "Application Users";
}

<h1>Application Users</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>IsDoctor</th>
            <th>Name</th>
            <th>Email</th>
            <th>User Name</th>
            <th>City</th>
            <th>Gender</th>
            <th>Is Doctor</th>
            <th>Specialist</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Data != null && Model.Data.Any())
        {
            foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.IsDoctor</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.UserName</td>
                    <td>@item.City</td>
                    <td>@item.Gender</td>
                    <td>@item.IsDoctor</td>
                    <td>@item.Specialist</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.UserName" class="btn btn-sm btn-warning">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.UserName" class="btn btn-sm btn-info">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.UserName" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">No records found.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Cloudscribe Pagination -->
<cs-pager 
    cs-paging-pagesize="(int)Model.PageSize"
    cs-paging-pagenumber="(int)Model.PageNumber"
    cs-paging-totalitems="(int)Model.TotalItems"
    cs-pagenumber-param="pageNumber"
    asp-controller="ApplicationUser"
    asp-action="Index"
    cs-pager-li-current-class="page-item active"
    cs-pager-li-other-class="page-item"
    cs-pager-li-non-active-class="page-item disabled"
    cs-pager-link-current-class="page-link"
    cs-pager-link-other-class="page-link">
</cs-pager>
