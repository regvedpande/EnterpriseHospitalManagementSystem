@model PagedResult<RoomViewModel>

@{
    ViewData["Title"] = "Rooms List";
}

<h1>Rooms List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Room</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Room Number</th>
            <th>Type</th>
            <th>Status</th>
            <th>Hospital Info</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model.Data)
        {
            <tr>
                <td>@room.Id</td>
                <td>@room.RoomNumber</td>
                <td>@room.Type</td>
                <td>@room.Status</td>
                <td>@(room.HospitalInfo ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@room.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this room?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        @for (int i = 1; ; i++)
        {
            if (i <= Model.TotalItems / Model.PageSize + 1)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                </li>
            }
            else
            {
                break;
            }
        }
    </ul>
</nav>
