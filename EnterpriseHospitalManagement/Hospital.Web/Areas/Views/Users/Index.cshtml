@* Areas/Admin/Views/Users/Index.cshtml *@
@model Hospital.Utilities.PagedResult<Hospital.ViewModels.ApplicationUserViewModel>
@{
    ViewData["Title"] = "Users List";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0" style="font-weight:700; color:#1e293b;">Users</h2>
        <p class="text-muted mb-0" style="font-size:0.875rem;">Manage all registered users</p>
    </div>
    <a asp-action="AllDoctors" class="btn btn-primary">
        <i class="fas fa-user-md mr-1"></i> View All Doctors
    </a>
</div>

@if (Model?.Data == null || !Model.Data.Any())   @* FIX: null guard added *@
{
    <div class="alert alert-info">No users found.</div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead style="background:#f1f5f9;">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Username</th>
                        <th>City</th>
                        <th>Gender</th>
                        <th>Doctor</th>
                        <th>Specialist</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.UserName</td>
                            <td>@item.City</td>
                            <td>@item.Gender</td>
                            <td>
                                @if (item.IsDoctor)
                                {
                                    <span class="badge badge-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">No</span>
                                }
                            </td>
                            <td>@item.Specialist</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @* Pager *@
    <cs-pager cs-paging-pagesize="@Model.PageSize"
              cs-paging-pagenumber="@Model.PageNumber"
              cs-paging-totalitems="@Model.TotalItems"
              cs-pagenumber-param="pageNumber"
              asp-action="Index"
              cs-pager-li-current-class="page-item active"
              cs-pager-li-other-class="page-item"
              cs-pager-link-current-class="page-link"
              cs-pager-link-other-class="page-link">
    </cs-pager>
}
