@model PagedResult<TimingViewModel>
@{
    ViewData["Title"] = "Timings List";
}

<h1>Timings List</h1>
<p>
    <a asp-action="AddTiming" class="btn btn-primary">Add New Timing</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Schedule Date</th>
            <th>Morning Shift</th>
            <th>Afternoon Shift</th>
            <th>Duration</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.ScheduleDate.ToShortDateString()</td>
                <td>@item.MorningShiftStartTime:00 - @item.MorningShiftEndTime:00</td>
                <td>@item.AfternoonShiftStartTime:00 - @item.AfternoonShiftEndTime:00</td>
                <td>@item.Duration</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<cs-pager
    cs-paging-pagesize="@Model.PageSize"
    cs-paging-pagenumber="@Model.PageNumber"
    cs-paging-totalitems="@Model.TotalItems"
    cs-pagenumber-param="pageNumber"
    asp-action="Index"
    cs-pager-li-current-class="page-item active"
    cs-pager-li-other-class="page-item"
    cs-pager-link-current-class="page-link"
    cs-pager-link-other-class="page-link">
</cs-pager>
