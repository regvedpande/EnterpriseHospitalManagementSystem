@model PagedResult<ContactViewModel>
@{
    ViewData["Title"] = "Contacts List";
}

<h1>Contacts List</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Contact</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Contact</a>
    <a asp-action="ExportCsv" class="btn btn-outline-secondary">Export CSV</a>
    <a asp-action="ExportPdf" class="btn btn-outline-secondary">Export PDF</a>
</p>


<cs-pager
    cs-paging-pagesize="@Model.PageSize"
    cs-paging-pagenumber="@Model.PageNumber"
    cs-paging-totalitems="@Model.TotalItems"
    cs-pagenumber-param="pageNumber"
    asp-action="Index"
    cs-pager-li-current-class="page-item active"
    cs-pager-li-other-class="page-item"
    cs-pager-link-current-class="page-link"
    cs-pager-link-other-class="page-link">
</cs-pager>
