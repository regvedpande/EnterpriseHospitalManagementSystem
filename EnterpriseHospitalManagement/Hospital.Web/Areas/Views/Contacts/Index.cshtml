@using Hospital.ViewModels
@using Hospital.Utilities
@model PagedResult<ContactViewModel>
@{
    ViewData["Title"] = "Contacts";
}

<div class="page-header">
    <div>
        <h2>Contacts</h2>
        <p>Manage hospital contact records</p>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary btn-sm mr-1"><i class="fas fa-plus mr-1"></i>Add Contact</a>
        <a asp-action="ExportCsv" class="btn btn-outline-secondary btn-sm mr-1"><i class="fas fa-file-csv mr-1"></i>CSV</a>
        <a asp-action="ExportPdf" class="btn btn-outline-secondary btn-sm"><i class="fas fa-file-pdf mr-1"></i>PDF</a>
    </div>
</div>

@if (!Model.Data.Any())
{
    <div class="alert alert-info"><i class="fas fa-info-circle mr-2"></i>No contacts yet. <a asp-action="Create">Add the first one.</a></div>
}
else
{
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr><th>#</th><th>Email</th><th>Phone</th><th>Hospital ID</th><th width="100">Actions</th></tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td class="text-muted">@item.Id</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>@item.HospitalInfoId</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('Delete this contact?')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (Model.TotalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination pagination-sm">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
}