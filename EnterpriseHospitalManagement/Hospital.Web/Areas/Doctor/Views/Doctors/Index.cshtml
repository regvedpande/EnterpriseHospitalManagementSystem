@model IEnumerable<Hospital.Models.Timing>
@{
    ViewData["Title"] = "My Schedule";
}

<div class="page-header">
    <div>
        <h2>My Schedule</h2>
        <p>Manage your timing availability</p>
    </div>
    <a asp-action="AddTiming" class="btn btn-primary btn-sm">
        <i class="fas fa-plus mr-1"></i>Add Timing
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle mr-2"></i>No timings added yet.
        <a asp-action="AddTiming">Add your first timing slot.</a>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Morning Shift</th>
                        <th>Afternoon Shift</th>
                        <th>Duration (min)</th>
                        <th>Status</th>
                        <th width="100">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        var statusLabel = t.Status == Hospital.Models.Enums.Status.Active ? "Active" : "Inactive";
                        var statusClass = t.Status == Hospital.Models.Enums.Status.Active ? "success" : "secondary";
                        <tr>
                            <td>@t.ScheduleDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                <span class="badge badge-light border">
                                    @t.MorningShiftStartTime:00 – @t.MorningShiftEndTime:00
                                </span>
                            </td>
                            <td>
                                <span class="badge badge-light border">
                                    @t.AfternoonShiftStartTime:00 – @t.AfternoonShiftEndTime:00
                                </span>
                            </td>
                            <td>@t.Duration</td>
                            <td><span class="badge badge-@statusClass">@statusLabel</span></td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@t.Id"
                                   class="btn btn-sm btn-warning" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@t.Id" method="post"
                                      class="d-inline" onsubmit="return confirm('Delete this timing?')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
