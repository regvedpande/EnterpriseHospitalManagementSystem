@using Hospital.Areas.Admin.Controllers
@model HospitalInfoViewModel
@{
    ViewData["Title"] = "Create Hospital";
}

<div class="page-header">
    <h2>Create Hospital</h2>
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
        <i class="fas fa-arrow-left mr-1"></i>Back
    </a>
</div>

<div class="card shadow-sm p-4" style="max-width:520px;">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="e.g. City General Hospital" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="Type"></label>
            <select asp-for="Type" class="form-control">
                <option value="">-- Select Type --</option>
                <option>Public</option>
                <option>Private</option>
                <option>Government</option>
                <option>Clinic</option>
                <option>Specialist</option>
            </select>
            <span asp-validation-for="Type" class="text-danger small"></span>
        </div>
        <div class="form-row">
            <div class="form-group col-md-7">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger small"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="PinCode"></label>
                <input asp-for="PinCode" class="form-control" />
                <span asp-validation-for="PinCode" class="text-danger small"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Country"></label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger small"></span>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary mr-2">
                <i class="fas fa-save mr-1"></i>Create
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
