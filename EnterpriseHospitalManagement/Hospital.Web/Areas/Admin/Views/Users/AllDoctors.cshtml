@model IEnumerable<Hospital.Models.ApplicationUser>
@{
    ViewData["Title"] = "All Doctors";
}

<div class="page-header">
    <div>
        <h2>Doctors</h2>
        <p>All registered doctors</p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm mr-1">
            <i class="fas fa-users mr-1"></i>All Users
        </a>
        <a asp-action="AllPatients" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-procedures mr-1"></i>Patients
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle mr-2"></i>No doctors registered yet.
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Name</th><th>Email</th><th>Specialist</th><th>Phone</th><th>Nationality</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model)
                    {
                        <tr>
                            <td>
                                <span class="rounded-circle mr-2 d-inline-flex align-items-center justify-content-center"
                                      style="width:28px;height:28px;background:#0f4c81;color:#fff;font-weight:700;font-size:.75rem;">
                                    @d.Name.Substring(0,1).ToUpper()
                                </span>
                                <strong>Dr. @d.Name</strong>
                            </td>
                            <td>@d.Email</td>
                            <td>
                                @if (!string.IsNullOrEmpty(d.Specialist))
                                {
                                    <span class="badge badge-info">@d.Specialist</span>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td>@(d.PhoneNumber ?? "—")</td>
                            <td>@(d.Nationality ?? "—")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
