@model IEnumerable<Hospital.Models.ApplicationUser>
@{
    ViewData["Title"] = "All Patients";
}

<div class="page-header">
    <div>
        <h2>Patients</h2>
        <p>All registered patients</p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm mr-1">
            <i class="fas fa-users mr-1"></i>All Users
        </a>
        <a asp-action="AllDoctors" class="btn btn-outline-primary btn-sm">
            <i class="fas fa-user-md mr-1"></i>Doctors
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle mr-2"></i>No patients registered yet.
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Name</th><th>Email</th><th>Phone</th><th>Nationality</th><th>DOB</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>
                                <span class="rounded-circle mr-2 d-inline-flex align-items-center justify-content-center"
                                      style="width:28px;height:28px;background:#64748b;color:#fff;font-weight:700;font-size:.75rem;">
                                    @p.Name.Substring(0,1).ToUpper()
                                </span>
                                @p.Name
                            </td>
                            <td>@p.Email</td>
                            <td>@(p.PhoneNumber ?? "—")</td>
                            <td>@(p.Nationality ?? "—")</td>
                            <td>@p.DOB.ToString("MMM dd, yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
