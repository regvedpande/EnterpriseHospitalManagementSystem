@using Hospital.Areas.Admin.Controllers
@model Hospital.Utilities.PagedResult<RoomViewModel>
@{
    ViewData["Title"] = "Rooms";
}

<div class="page-header">
    <div>
        <h2>Rooms</h2>
        <p>Track room availability and occupancy</p>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-sm">
        <i class="fas fa-plus mr-1"></i>Add Room
    </a>
</div>

@if (!Model.Data.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle mr-2"></i>No rooms yet.
        <a asp-action="Create">Add the first one.</a>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>#</th><th>Room No.</th><th>Type</th><th>Status</th>
                        <th>Hospital ID</th><th width="100">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.Data)
                    {
                        var (statusLabel, statusClass) = r.Status switch
                        {
                            0 => ("Available",   "success"),
                            1 => ("Occupied",    "danger"),
                            2 => ("Maintenance", "warning"),
                            _ => ("Unknown",     "secondary")
                        };
                        <tr>
                            <td class="text-muted">@r.Id</td>
                            <td><strong>@r.RoomNumber</strong></td>
                            <td>@r.Type</td>
                            <td>
                                <span class="badge badge-@statusClass">@statusLabel</span>
                            </td>
                            <td>@r.HospitalId</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@r.Id"
                                   class="btn btn-sm btn-warning" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@r.Id" method="post"
                                      class="d-inline" onsubmit="return confirm('Delete this room?')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (Model.TotalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination pagination-sm">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
}
