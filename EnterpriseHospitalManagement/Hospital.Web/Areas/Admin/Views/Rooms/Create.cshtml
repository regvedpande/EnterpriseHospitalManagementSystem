@model Hospital.ViewModels.RoomViewModel
@{
    ViewData["Title"] = "Create Room";
}

<div class="page-header">
    <h2>Create Room</h2>
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
        <i class="fas fa-arrow-left mr-1"></i>Back
    </a>
</div>

<div class="card shadow-sm p-4" style="max-width:480px;">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="RoomNumber">Room Number</label>
                <input asp-for="RoomNumber" class="form-control" placeholder="e.g. 101A" />
                <span asp-validation-for="RoomNumber" class="text-danger small"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="HospitalId">Hospital ID</label>
                <input asp-for="HospitalId" class="form-control" type="number" min="1" />
                <span asp-validation-for="HospitalId" class="text-danger small"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Type">Room Type</label>
            <select asp-for="Type" class="form-control">
                <option value="">-- Select Type --</option>
                <option>General</option>
                <option>ICU</option>
                <option>Private</option>
                <option>Semi-Private</option>
                <option>Emergency</option>
                <option>Operation Theatre</option>
                <option>Maternity</option>
                <option>Pediatric</option>
            </select>
            <span asp-validation-for="Type" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="Status">Status</label>
            <select asp-for="Status" class="form-control">
                <option value="0">âœ… Available</option>
                <option value="1">ðŸ”´ Occupied</option>
                <option value="2">ðŸ”§ Maintenance</option>
            </select>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary mr-2">
                <i class="fas fa-save mr-1"></i>Create
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
