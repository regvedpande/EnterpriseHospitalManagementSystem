@model Hospital.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<div class="text-center py-5">
    <i class="fas fa-exclamation-triangle text-danger" style="font-size:4rem;"></i>
    <h1 class="mt-3 text-danger font-weight-bold">An Error Occurred</h1>
    <p class="text-muted">Something went wrong while processing your request.</p>
    @if (Model?.ShowRequestId == true)
    {
        <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
    }
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
        <i class="fas fa-home mr-1"></i>Go Home
    </a>
</div>
