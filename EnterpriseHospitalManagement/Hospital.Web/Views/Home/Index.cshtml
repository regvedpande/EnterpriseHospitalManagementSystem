@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}
<div class="jumbotron" style="background:linear-gradient(135deg,#0f4c81,#1a6bbf);color:white;border-radius:12px;">
    <h1 class="display-4"><i class="fas fa-hospital-alt mr-3"></i>Enterprise Hospital Management</h1>
    <p class="lead">A unified platform for hospitals, doctors, and patients.</p>
    <hr class="my-4" style="border-color:rgba(255,255,255,0.3)"/>
    @if (!User.Identity.IsAuthenticated)
    {
        <a class="btn btn-light btn-lg mr-2" asp-area="Identity" asp-page="/Account/Login">
            <i class="fas fa-sign-in-alt mr-1"></i> Login
        </a>
        <a class="btn btn-outline-light btn-lg" asp-area="Identity" asp-page="/Account/Register">
            <i class="fas fa-user-plus mr-1"></i> Register
        </a>
    }
    else if (User.IsInRole("Website_Admin"))
    {
        <a class="btn btn-light btn-lg" asp-area="Admin" asp-controller="Hospitals" asp-action="Index">
            <i class="fas fa-th-large mr-1"></i> Admin Dashboard
        </a>
    }
    else if (User.IsInRole("Website_Doctor"))
    {
        <a class="btn btn-light btn-lg" asp-area="Doctor" asp-controller="Doctors" asp-action="Index">
            <i class="fas fa-calendar-alt mr-1"></i> My Schedule
        </a>
    }
</div>
<div class="row mt-4">
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-4">
                <i class="fas fa-hospital fa-2x text-primary mb-3"></i>
                <h5>Hospital Management</h5>
                <p class="text-muted">Manage branches, staff, and operations.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-4">
                <i class="fas fa-user-md fa-2x text-success mb-3"></i>
                <h5>Doctor Scheduling</h5>
                <p class="text-muted">Doctors manage timings and appointments.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-4">
                <i class="fas fa-door-open fa-2x text-warning mb-3"></i>
                <h5>Room Tracking</h5>
                <p class="text-muted">Real-time room availability across all branches.</p>
            </div>
        </div>
    </div>
</div>
