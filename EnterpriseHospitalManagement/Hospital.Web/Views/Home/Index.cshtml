@{
    ViewData["Title"] = "Home";
}
<style>
    .hero {
        background: linear-gradient(135deg,#0f4c81 0%,#1565c0 55%,#00b4d8 100%);
        color: #fff;
        border-radius: 16px;
        padding: 4.5rem 3rem 4rem;
        margin-bottom: 2.5rem;
    }

    .hero-badge {
        display: inline-block;
        background: rgba(255,255,255,.15);
        border: 1px solid rgba(255,255,255,.25);
        padding: .25rem .9rem;
        border-radius: 50px;
        font-size: .75rem;
        font-weight: 700;
        letter-spacing: .06em;
        text-transform: uppercase;
        margin-bottom: 1.25rem;
    }

    .hero h1 {
        font-size: 2.5rem;
        font-weight: 800;
        line-height: 1.2;
        margin-bottom: .9rem;
    }

    .hero p {
        font-size: 1rem;
        opacity: .88;
        max-width: 500px;
        line-height: 1.75;
    }

    .hero-actions {
        margin-top: 2rem;
        display: flex;
        gap: .75rem;
        flex-wrap: wrap;
    }

    .btn-hero-white {
        background: #fff;
        color: #0f4c81;
        font-weight: 700;
        padding: .6rem 1.5rem;
        border-radius: 8px;
        border: none;
        text-decoration: none;
        font-size: .9rem;
        transition: all .2s;
        display: inline-flex;
        align-items: center;
        gap: .4rem;
    }

        .btn-hero-white:hover {
            background: #f1f5f9;
            color: #0f4c81;
            text-decoration: none;
        }

    .btn-hero-ghost {
        background: transparent;
        color: #fff;
        font-weight: 600;
        padding: .6rem 1.5rem;
        border-radius: 8px;
        border: 2px solid rgba(255,255,255,.4);
        text-decoration: none;
        font-size: .9rem;
        display: inline-flex;
        align-items: center;
        gap: .4rem;
    }

        .btn-hero-ghost:hover {
            background: rgba(255,255,255,.1);
            color: #fff;
            text-decoration: none;
        }

    .stat-box {
        background: #fff;
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        padding: 1.25rem;
        text-align: center;
    }

        .stat-box .icon {
            font-size: 1.4rem;
            color: #0f4c81;
            margin-bottom: .3rem;
        }

        .stat-box .label {
            font-size: .78rem;
            font-weight: 600;
            color: #64748b;
            margin: 0;
            text-transform: uppercase;
            letter-spacing: .04em;
        }

    .feat {
        background: #fff;
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        padding: 1.5rem;
        height: 100%;
        transition: all .2s;
    }

        .feat:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 24px rgba(15,76,129,.09);
            border-color: #bfdbfe;
        }

    .feat-icon {
        width: 44px;
        height: 44px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
        margin-bottom: .85rem;
    }

    .feat h6 {
        font-weight: 700;
        margin-bottom: .3rem;
        font-size: .92rem;
    }

    .feat p {
        font-size: .83rem;
        color: #64748b;
        margin: 0;
        line-height: 1.6;
    }
</style>

<section class="hero">
    <div class="row align-items-center">
        <div class="col-lg-8">
            <span class="hero-badge"><i class="fas fa-shield-alt mr-1"></i>Trusted Healthcare Platform</span>
            <h1>Enterprise Hospital<br />Management System</h1>
            <p>A unified platform for hospitals, doctors, and patients — all from one secure dashboard.</p>
            <div class="hero-actions">
                @if (!(User.Identity?.IsAuthenticated ?? false))
                {
                    <a href="/Identity/Account/Register" class="btn-hero-white"><i class="fas fa-user-plus"></i>Get Started</a>
                    <a href="/Identity/Account/Login" class="btn-hero-ghost"><i class="fas fa-sign-in-alt"></i>Sign In</a>
                }
                else if (User.IsInRole("Website_Admin"))
                {
                    <a asp-area="Admin" asp-controller="Hospitals" asp-action="Index" class="btn-hero-white"><i class="fas fa-th-large"></i>Admin Dashboard</a>
                }
                else if (User.IsInRole("Website_Doctor"))
                {
                    <a asp-area="Doctor" asp-controller="Doctors" asp-action="Index" class="btn-hero-white"><i class="fas fa-calendar-alt"></i>My Schedule</a>
                }
                else
                {
                    <a asp-area="Patient" asp-controller="Home" asp-action="Index" class="btn-hero-white"><i class="fas fa-th-large"></i>My Dashboard</a>
                }
            </div>
        </div>
        <div class="col-lg-4 d-none d-lg-flex justify-content-end">
            <i class="fas fa-hospital-alt" style="font-size:8rem;opacity:.1;"></i>
        </div>
    </div>
</section>

<div class="row mb-4">
    <div class="col-6 col-md-3 mb-3"><div class="stat-box"><div class="icon"><i class="fas fa-clock"></i></div><p class="label">24/7 Operations</p></div></div>
    <div class="col-6 col-md-3 mb-3"><div class="stat-box"><div class="icon"><i class="fas fa-lock"></i></div><p class="label">Secure &amp; Compliant</p></div></div>
    <div class="col-6 col-md-3 mb-3"><div class="stat-box"><div class="icon"><i class="fas fa-chart-line"></i></div><p class="label">Real-Time Data</p></div></div>
    <div class="col-6 col-md-3 mb-3"><div class="stat-box"><div class="icon"><i class="fas fa-users"></i></div><p class="label">Multi-Role Access</p></div></div>
</div>

<p style="font-size:.72rem;font-weight:700;letter-spacing:.12em;color:#0f4c81;text-transform:uppercase;margin-bottom:.3rem;">Core Features</p>
<h2 style="font-size:1.55rem;font-weight:800;color:#1e293b;margin-bottom:.4rem;">Everything you need to run a hospital</h2>
<p class="text-muted mb-4" style="font-size:.875rem;">From rooms to doctor schedules — all in one place.</p>
<div class="row">
    <div class="col-md-4 mb-4"><div class="feat"><div class="feat-icon" style="background:#dbeafe;color:#1d4ed8;"><i class="fas fa-hospital"></i></div><h6>Hospital Management</h6><p>Register and manage multiple branches with full location tracking.</p></div></div>
    <div class="col-md-4 mb-4"><div class="feat"><div class="feat-icon" style="background:#dcfce7;color:#16a34a;"><i class="fas fa-door-open"></i></div><h6>Room &amp; Bed Tracking</h6><p>Monitor room availability and occupancy in real time.</p></div></div>
    <div class="col-md-4 mb-4"><div class="feat"><div class="feat-icon" style="background:#fef9c3;color:#ca8a04;"><i class="fas fa-user-md"></i></div><h6>Doctor Scheduling</h6><p>Doctors manage timings and appointments from a dedicated portal.</p></div></div>
    <div class="col-md-4 mb-4"><div class="feat"><div class="feat-icon" style="background:#fce7f3;color:#be185d;"><i class="fas fa-address-book"></i></div><h6>Contact Management</h6><p>Hospital contact directory with one-click CSV and PDF export.</p></div></div>
    <div class="col-md-4 mb-4"><div class="feat"><div class="feat-icon" style="background:#ede9fe;color:#7c3aed;"><i class="fas fa-shield-alt"></i></div><h6>Role-Based Access</h6><p>Distinct portals for Admins, Doctors, and Patients.</p></div></div>
    <div class="col-md-4 mb-4"><div class="feat"><div class="feat-icon" style="background:#ffedd5;color:#c2410c;"><i class="fas fa-file-export"></i></div><h6>Reports &amp; Exports</h6><p>Export any data to CSV or PDF for compliance and auditing.</p></div></div>
</div>