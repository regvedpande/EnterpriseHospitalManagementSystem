<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <style>
        body { font-family: 'Plus Jakarta Sans', sans-serif; background: #f8fafc; color: #1e293b; }
        .navbar { background: #fff !important; border-bottom: 1px solid #e2e8f0; box-shadow: 0 1px 6px rgba(15,76,129,.06); }
        .navbar-brand { font-weight: 700; font-size: 1.1rem; color: #0f4c81 !important; display: flex; align-items: center; gap: .5rem; }
        .brand-icon { width:32px;height:32px;background:linear-gradient(135deg,#0f4c81,#00b4d8);border-radius:8px;display:flex;align-items:center;justify-content:center;color:#fff;font-size:.85rem; }
        .navbar .nav-link { color: #475569 !important; font-weight: 500; font-size: .875rem; padding: .35rem .8rem !important; border-radius: 6px; transition: all .15s; }
        .navbar .nav-link:hover { color: #0f4c81 !important; background: #eff6ff; }
        .navbar .nav-link i { margin-right:.3rem; }
        .alert-success { background:#f0fdf4;border:1px solid #bbf7d0;color:#166534;border-radius:8px; }
        .alert-danger  { background:#fef2f2;border:1px solid #fecaca;color:#991b1b;border-radius:8px; }
        .alert-info    { background:#eff6ff;border:1px solid #bfdbfe;color:#1e40af;border-radius:8px; }
        .card { border-radius: 12px; border: 1px solid #e2e8f0; }
        .card.shadow-sm { box-shadow: 0 2px 8px rgba(15,76,129,.07) !important; }
        .table thead th { font-size:.8rem;font-weight:700;text-transform:uppercase;letter-spacing:.04em;color:#64748b;border-bottom:1px solid #e2e8f0;border-top:none; }
        .table tbody tr:hover { background:#f8fafc; }
        .btn-primary { background:#0f4c81;border-color:#0f4c81; }
        .btn-primary:hover { background:#0d3f6e;border-color:#0d3f6e; }
        footer { background:#fff;border-top:1px solid #e2e8f0;color:#64748b;font-size:.82rem; }
        .page-header { display:flex;justify-content:space-between;align-items:center;margin-bottom:1.5rem; }
        .page-header h2 { font-weight:700;margin:0;font-size:1.5rem;color:#1e293b; }
        .page-header p { margin:0;color:#64748b;font-size:.85rem; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light">
            <div class="container-fluid px-4">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="brand-icon"><i class="fas fa-hospital-alt"></i></span>
                    EnterpriseHospital
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mr-auto mt-1 mt-md-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i>Home
                            </a>
                        </li>
                        @if (User.IsInRole("Website_Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Hospitals" asp-action="Index">
                                    <i class="fas fa-hospital"></i>Hospitals
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Rooms" asp-action="Index">
                                    <i class="fas fa-door-open"></i>Rooms
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Contacts" asp-action="Index">
                                    <i class="fas fa-address-book"></i>Contacts
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index">
                                    <i class="fas fa-users"></i>Users
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Website_Doctor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Doctor" asp-controller="Doctors" asp-action="Index">
                                    <i class="fas fa-calendar-alt"></i>My Schedule
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Website_Patient"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Patient" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-th-large"></i>Dashboard
                                </a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid px-4 mt-4" style="max-width:1300px;margin-left:auto;margin-right:auto;">
        <main>
            @if (TempData["success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle mr-2"></i>@TempData["success"]
                    <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                </div>
            }
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle mr-2"></i>@TempData["error"]
                    <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container-fluid px-4 py-3 d-flex justify-content-between" style="max-width:1300px;margin:auto;">
            <span>&copy; @DateTime.Now.Year EnterpriseHospitalManagement</span>
            <span><i class="fas fa-heartbeat text-danger mr-1"></i>Caring for your health</span>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>