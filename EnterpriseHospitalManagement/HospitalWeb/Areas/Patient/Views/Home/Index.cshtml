@{ ViewData["Title"] = "Patient Dashboard"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0" style="font-weight:700;">Patient Dashboard</h2>
        <p class="text-muted mb-0">Welcome back, @User.Identity.Name</p>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card border-0 shadow-sm text-center p-4">
            <div style="font-size:2.5rem;color:#0f4c81;"><i class="fas fa-user-md"></i></div>
            <h5 class="mt-3 font-weight-bold">Find a Doctor</h5>
            <p class="text-muted small">Browse available doctors and their schedules.</p>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card border-0 shadow-sm text-center p-4">
            <div style="font-size:2.5rem;color:#16a34a;"><i class="fas fa-calendar-check"></i></div>
            <h5 class="mt-3 font-weight-bold">My Appointments</h5>
            <p class="text-muted small">View and manage your upcoming appointments.</p>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card border-0 shadow-sm text-center p-4">
            <div style="font-size:2.5rem;color:#ca8a04;"><i class="fas fa-file-medical"></i></div>
            <h5 class="mt-3 font-weight-bold">Medical Records</h5>
            <p class="text-muted small">Access your medical history and reports.</p>
        </div>
    </div>
</div>
