@model Hospital.Utilities.PagedResult<Hospital.ViewModels.ApplicationUserViewModel>
@{ ViewData["Title"] = "Users"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <div><h2 class="mb-0" style="font-weight:700;">Users</h2><p class="text-muted mb-0" style="font-size:0.875rem;">Manage all registered users</p></div>
    <div style="display:flex;gap:0.5rem;">
        <a asp-action="AllDoctors" class="btn btn-outline-primary btn-sm"><i class="fas fa-user-md mr-1"></i>Doctors</a>
        <a asp-action="AllPatients" class="btn btn-outline-secondary btn-sm"><i class="fas fa-user mr-1"></i>Patients</a>
    </div>
</div>

@if (Model?.Data == null || !Model.Data.Any())
{
    <div class="alert alert-info">No users found.</div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead style="background:#f1f5f9;">
                    <tr><th>Name</th><th>Email</th><th>Username</th><th>City</th><th>Gender</th><th>Doctor</th><th>Specialist</th></tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>@item.Name</td><td>@item.Email</td><td>@item.UserName</td>
                            <td>@item.City</td><td>@item.Gender</td>
                            <td>@(item.IsDoctor ? Html.Raw("<span class='badge badge-success'>Yes</span>") : Html.Raw("<span class='badge badge-secondary'>No</span>"))</td>
                            <td>@item.Specialist</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <cs-pager cs-paging-pagesize="@Model.PageSize" cs-paging-pagenumber="@Model.PageNumber"
              cs-paging-totalitems="@Model.TotalItems.ToString()" cs-pagenumber-param="pageNumber"
              asp-action="Index" cs-pager-li-current-class="page-item active"
              cs-pager-li-other-class="page-item" cs-pager-link-current-class="page-link"
              cs-pager-link-other-class="page-link"></cs-pager>
}
