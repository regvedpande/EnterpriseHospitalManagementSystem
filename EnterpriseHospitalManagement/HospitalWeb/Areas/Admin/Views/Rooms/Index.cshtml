@model Hospital.Utilities.PagedResult<Hospital.ViewModels.RoomViewModel>
@{ ViewData["Title"] = "Rooms"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <div><h2 class="mb-0" style="font-weight:700;">Rooms</h2><p class="text-muted mb-0" style="font-size:0.875rem;">Manage hospital rooms</p></div>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus mr-1"></i>Add Room</a>
</div>

@if (Model?.Data == null || !Model.Data.Any())
{
    <div class="alert alert-info">No rooms found. <a asp-action="Create">Add the first room.</a></div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead style="background:#f1f5f9;">
                    <tr><th>Room Number</th><th>Type</th><th>Status</th><th class="text-right">Actions</th></tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td><strong>@item.RoomNumber</strong></td>
                            <td>@item.Type</td>
                            <td>
                                @{
                                    var statusStr = item.Status.ToString();
                                    var badgeClass = statusStr.Equals("Available", StringComparison.OrdinalIgnoreCase) ? "badge-success"
                                                   : statusStr.Equals("Occupied", StringComparison.OrdinalIgnoreCase) ? "badge-danger"
                                                   : "badge-warning";
                                }
                                <span class="badge @badgeClass">@statusStr</span>
                            </td>
                            <td class="text-right">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary mr-1"><i class="fas fa-edit"></i></a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Delete this room?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <cs-pager cs-paging-pagesize="@Model.PageSize" cs-paging-pagenumber="@Model.PageNumber"
              cs-paging-totalitems="@Model.TotalItems.ToString()" cs-pagenumber-param="pageNumber"
              asp-action="Index" cs-pager-li-current-class="page-item active"
              cs-pager-li-other-class="page-item" cs-pager-link-current-class="page-link"
              cs-pager-link-other-class="page-link"></cs-pager>
}
