@model Hospital.Utilities.PagedResult<Hospital.ViewModels.TimingViewModel>
@{ ViewData["Title"] = "My Timings"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <div><h2 class="mb-0" style="font-weight:700;">My Timings</h2><p class="text-muted mb-0" style="font-size:0.875rem;">Manage your schedule and availability</p></div>
    <a asp-action="AddTiming" class="btn btn-primary"><i class="fas fa-plus mr-1"></i>Add Timing</a>
</div>

@if (Model?.Data == null || !Model.Data.Any())
{
    <div class="alert alert-info">No timings found. <a asp-action="AddTiming">Add your first timing slot.</a></div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead style="background:#f1f5f9;">
                    <tr><th>Date</th><th>Morning Shift</th><th>Afternoon Shift</th><th>Slot</th><th>Status</th><th class="text-right">Actions</th></tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>@item.ScheduleDate.ToString("dd MMM yyyy")</td>
                            <td>@item.MorningShiftStartTime:00 – @item.MorningShiftEndTime:00</td>
                            <td>@item.AfternoonShiftStartTime:00 – @item.AfternoonShiftEndTime:00</td>
                            <td>@item.Duration min</td>
                            <td>
                                @{
                                    var s = item.Status.ToString();
                                    var bc = s == "Active" ? "badge-success" : s == "Inactive" ? "badge-secondary" : "badge-warning";
                                }
                                <span class="badge @bc">@s</span>
                            </td>
                            <td class="text-right">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary mr-1"><i class="fas fa-edit"></i></a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Delete this timing?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <cs-pager cs-paging-pagesize="@Model.PageSize" cs-paging-pagenumber="@Model.PageNumber"
              cs-paging-totalitems="@Model.TotalItems.ToString()" cs-pagenumber-param="pageNumber"
              asp-action="Index" cs-pager-li-current-class="page-item active"
              cs-pager-li-other-class="page-item" cs-pager-link-current-class="page-link"
              cs-pager-link-other-class="page-link"></cs-pager>
}
