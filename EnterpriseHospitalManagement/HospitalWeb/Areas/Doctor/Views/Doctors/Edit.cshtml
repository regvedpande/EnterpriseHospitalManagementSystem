@model Hospital.ViewModels.TimingViewModel
@{ ViewData["Title"] = "Edit Timing"; }

<div class="row justify-content-center">
    <div class="col-md-7">
        <div class="card shadow-sm border-0">
            <div class="card-header" style="background:#0f4c81;color:white;"><h5 class="mb-0"><i class="fas fa-edit mr-2"></i>Edit Timing</h5></div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <div class="form-group">
                        <label asp-for="ScheduleDate" class="control-label font-weight-bold"></label>
                        <input asp-for="ScheduleDate" class="form-control" type="date" />
                        <span asp-validation-for="ScheduleDate" class="text-danger small"></span>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="MorningShiftStartTime" class="control-label font-weight-bold"></label>
                            <select asp-for="MorningShiftStartTime" asp-items="Model.MorningShiftStart" class="form-control"><option value="">-- Select --</option></select>
                            <span asp-validation-for="MorningShiftStartTime" class="text-danger small"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="MorningShiftEndTime" class="control-label font-weight-bold"></label>
                            <select asp-for="MorningShiftEndTime" asp-items="Model.MorningShiftEnd" class="form-control"><option value="">-- Select --</option></select>
                            <span asp-validation-for="MorningShiftEndTime" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="AfternoonShiftStartTime" class="control-label font-weight-bold"></label>
                            <select asp-for="AfternoonShiftStartTime" asp-items="Model.AfternoonShiftStart" class="form-control"><option value="">-- Select --</option></select>
                            <span asp-validation-for="AfternoonShiftStartTime" class="text-danger small"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="AfternoonShiftEndTime" class="control-label font-weight-bold"></label>
                            <select asp-for="AfternoonShiftEndTime" asp-items="Model.AfternoonShiftEnd" class="form-control"><option value="">-- Select --</option></select>
                            <span asp-validation-for="AfternoonShiftEndTime" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Duration" class="control-label font-weight-bold"></label>
                        <input asp-for="Duration" class="form-control" />
                        <span asp-validation-for="Duration" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label font-weight-bold"></label>
                        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<Hospital.Models.Enums.Status>()"></select>
                        <span asp-validation-for="Status" class="text-danger small"></span>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left mr-1"></i>Back</a>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save mr-1"></i>Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts { @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); } }
