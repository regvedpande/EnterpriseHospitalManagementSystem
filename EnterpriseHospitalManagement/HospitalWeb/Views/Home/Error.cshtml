@model Hospital.Models.ErrorViewModel
@{ ViewData["Title"] = "Error"; }

<div class="text-center mt-5">
    <div style="font-size:4rem;color:#dc2626;"><i class="fas fa-exclamation-triangle"></i></div>
    <h1 class="mt-3" style="font-weight:700;">Something went wrong</h1>
    <p class="text-muted">An unexpected error occurred. Please try again or contact support.</p>
    @if (Model.ShowRequestId)
    {
        <p><small class="text-muted">Request ID: <code>@Model.RequestId</code></small></p>
    }
    <a href="/" class="btn btn-primary mt-3"><i class="fas fa-home mr-1"></i>Return Home</a>
</div>
