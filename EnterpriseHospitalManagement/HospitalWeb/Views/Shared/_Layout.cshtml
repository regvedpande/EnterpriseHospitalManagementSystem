<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EnterpriseHospitalManagement</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root { --primary: #0f4c81; --accent: #00b4d8; }
        body { font-family: 'Plus Jakarta Sans', sans-serif; background: #f8fafc; color: #1e293b; }
        .navbar { background: #fff !important; border-bottom: 1px solid #e2e8f0 !important; box-shadow: 0 1px 8px rgba(15,76,129,0.07); }
        .navbar-brand { font-weight: 700; color: var(--primary) !important; display: flex; align-items: center; gap: 0.5rem; }
        .navbar-brand-icon { width: 30px; height: 30px; background: linear-gradient(135deg, var(--primary), var(--accent)); border-radius: 7px; display:inline-flex; align-items:center; justify-content:center; color:white; font-size:0.85rem; }
        .nav-link { color: #475569 !important; font-weight: 500; font-size: 0.875rem; padding: 0.4rem 0.85rem !important; border-radius: 6px; transition: all 0.15s; }
        .nav-link:hover { color: var(--primary) !important; background: #eff6ff; }
        .alert-success { background: #f0fdf4; border: 1px solid #bbf7d0; color: #166534; border-radius: 8px; }
        .alert-danger { background: #fef2f2; border: 1px solid #fecaca; color: #991b1b; border-radius: 8px; }
        footer { background: #fff; border-top: 1px solid #e2e8f0; color: #64748b; font-size: 0.85rem; }
        .card { border-radius: 12px; }
        .btn-primary { background: var(--primary); border-color: var(--primary); }
        .btn-primary:hover { background: #0d3d6b; border-color: #0d3d6b; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-white">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="navbar-brand-icon"><i class="fas fa-hospital-alt"></i></span>
                    EnterpriseHospitalManagement
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navContent"
                        aria-controls="navContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home mr-1"></i>Home
                            </a>
                        </li>
                        @if (User.IsInRole("Website_Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Hospitals" asp-action="Index">
                                    <i class="fas fa-hospital mr-1"></i>Hospitals
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Rooms" asp-action="Index">
                                    <i class="fas fa-door-open mr-1"></i>Rooms
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Contacts" asp-action="Index">
                                    <i class="fas fa-address-book mr-1"></i>Contacts
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index">
                                    <i class="fas fa-users mr-1"></i>Users
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Website_Doctor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Doctor" asp-controller="Doctors" asp-action="Index">
                                    <i class="fas fa-clock mr-1"></i>Timings
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Website_Patient"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Patient" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-th-large mr-1"></i>Dashboard
                                </a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-4">
            @if (TempData["success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle mr-2"></i>@TempData["success"]
                    <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                </div>
            }
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle mr-2"></i>@TempData["error"]
                    <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>
    <footer class="border-top mt-5">
        <div class="container d-flex justify-content-between align-items-center py-3">
            <span>&copy; @DateTime.Now.Year EnterpriseHospitalManagement</span>
            <span><i class="fas fa-heartbeat text-danger mr-1"></i>Caring for your health</span>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
